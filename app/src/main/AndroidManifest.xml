<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ghostiny_singledevice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SettingActivity"></activity>
        <activity android:name=".MultiGameoverActivity" />
        <activity android:name=".SingleGameoverActivity" />
        <activity android:name=".GameContinueActivity" />
        <activity android:name=".GameActivity" />
        <activity android:name=".MultiNumberActivity" />
        <activity android:name=".MultiplayerActivity" />
        <activity android:name=".SingleNumberActivity" />
        <activity android:name=".InstructionActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>